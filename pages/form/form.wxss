/* pages/form/form.wxss */
.content{
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666;
}
.name text{
  color: #FF0000;
  margin-left: 30rpx;
}

input{
  width: 100%;
  height: 75rpx;
  border-radius: 10rpx;
  border: 1px solid #eeeeee;
  margin-top: 30rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

picker{
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 10rpx;
  border: 1px solid #eeeeee;
  margin-top: 30rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
picker text{
  color: #7b7b7b;
}
.button{
  width: 100%;
  height: 80rpx;
  background: #4FA4F8;
  margin-top: 50rpx;
  color: #fff;
  line-height: 80rpx;
}