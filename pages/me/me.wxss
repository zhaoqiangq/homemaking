/**index.wxss**/

.container{
  text-align: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  display: block;
  margin: 0 auto;
  margin-top: 80rpx;
  margin-bottom: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
}

.order{
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333;
  text-align: left;
  border-bottom: 1px solid #eee;
  padding-left: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.order::after{
  content: "";
  width: 25rpx;
  height: 110%;
  position: absolute;
  top:10rpx;left: 0;bottom: 0;
  margin: auto;
  background: #fff;
}
.order.active{
  border-top: 20rpx solid #f5f5f5;
  margin-top: 100rpx;
}
.order image{
  width: 30rpx;
  float: right;
  margin-top: 30rpx;
  margin-right: 40rpx;
}
.getInfo{
  width: 250rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #4FA4F8;
  color: #fff;
  margin-top: 50rpx; 
}